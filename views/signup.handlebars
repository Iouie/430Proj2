<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>BIG BELLY</title>

</head>

<body class='logsign-page'>
    <div class='container-fluid'>

        <div class='row top-buffer2'></div>
        
        <section id='signup'>
            <div class='greeting text-center'>
                <h1><img class='icon' src='./assets/img/favicon.png' alt='hamburger'>HELLO<img class='icon'
                        src='./assets/img/favicon.png' alt='hamburger'></h1>
            </div>

            <form id='signupForm' name='signupForm' action='/signup' method='POST' class='mainForm'></form>
            <div class='row justify-content-center'>
                <div class='form-group .col-md-3'>
                    <input class='field' id='user' type='text' name='username' placeholder='Username' />
                </div>
            </div>

            <div class='row justify-content-center'>
                <div class='form-group .col-md-3'>
                    <input class='field' id='pass' type='text' name='pass' placeholder='Password' />
                </div>
            </div>

            <div class='row justify-content-center'>
                <div class='form-group .col-md-3'>
                    <input class='field' id='pass2' type='text' name='pass2' placeholder='Retype Password' />
                </div>
            </div>

            <div class='row justify-content-center'>
                <div class='col-md-1'>
                    <button class='btn btn-outline-light' id='signupButton' type='submit'>Sign Up</button>
                </div>
            </div>

            <div class='row'>
                <div class='col text-center'>
                    <p>Have an account? <a href='./login'>Login</a></p>
                </div>
            </div>
            </form>
        </section>
    </div>
    </div>
    <script src='/assets/bundle.js'></script>
</body>

</html>